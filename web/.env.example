# Next.js
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1

# NextAuth.js
AUTH_SECRET=generate-a-random-secret-with-openssl-rand-base64-32
AUTH_TRUST_HOST=true

# Keycloak OIDC Provider
AUTH_KEYCLOAK_ID=exochat-web
AUTH_KEYCLOAK_SECRET=exochat-web-dev-secret
AUTH_KEYCLOAK_ISSUER=http://localhost:8080/realms/exochat
# Only set this in Docker (server-side Keycloak URL for OIDC discovery/token exchange)
# AUTH_KEYCLOAK_INTERNAL_ISSUER=http://keycloak:8080/realms/exochat

# Keycloak URL (used for registration redirect)
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
